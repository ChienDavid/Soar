sp {selection*propose*select-feature
   (state <s> ^name selection
              ^top-state <ts>
              ^item <i>
              ^over-threshold <i>
              ^selected-item <i>)
   (<i> ^feature-lists.feature <f>)
  -{(<s> ^selected-feature.feature <g>)
    (<i> ^feature-lists.feature <g>)}
#   (<ts> ^problem-space.features <psf>)
#   (<psf> ^unary <uf>)
#   (<uf> ^value <v>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name select-feature
        ^feature <f>
#        ^value <v>
   )
}

