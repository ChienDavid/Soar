sp {selection*compare*select-feature*count
   "This is a heuristic because adding a general rule conditions on a different set of features may be useful."
   (state <s> ^operator <o1> +
              ^operator <o2> +)
   (<o1> ^name select-feature
         ^feature.count <c1>)
   (<o2> ^name select-feature
         ^feature.count < <c1>)
-->
   (<s> ^operator <o1> > <o2>)
}

sp {selection*apply*select-feature
   (state <s> ^operator <o>)
   (<o> ^name select-feature
        ^feature <f>)
-->
   (<s> ^selected-feature <sf>)
   (<sf> ^feature <f>)
}
